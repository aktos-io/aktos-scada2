doctype html
//- IMPORTANT: "doctype html" MUST be the very first line in this document
include mixins.pug
        
html(lang="en-GB")
    head
        meta(charset="utf-8")
        meta(name="viewport"
            content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        meta(name="mobile-web-app-capable" content="yes")
        meta(name="google" content="notranslate")

        block icon 
            link(rel="icon" sizes="any" href="images/scadajs.ico")

        block title
            title ScadaJS #{app}
            
        script window.appStart = Date.now();
        script if (typeof module === 'object') {window.module = module; module = undefined;}
        script#vendor(src="js/vendor.js")
        script if (window.module) module = window.module;

        //- global css
        link(rel="stylesheet", href="css/vendor.css")

        //- rest of head section, if exists
        block head-append

    body
        block content                
            .ui.centered.grid#content
                .row
                    .column(style="padding-top: 10%")
                        img.ui.small.centered.image(src="images/scadajs-logo-long.svg" alt="ScadaJS")
                .row
                    //- # loading icon consumes a very high processing power
                        .column 
                            .ui.active.centered.inline.big.text.loader.indeterminate
                                .ui.p Loading Application...
                                .ui.p#timer     
                    .column 
                        .ui.center.aligned.grid 
                            .row
                                .column Loading Application...
                            .row 
                                .column 
                                    #timer                         
                block loading                 

        block app 
            script(src="js/app.js")
                
        block body-append
            
